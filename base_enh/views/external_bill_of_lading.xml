<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record model="ir.ui.view"
			id="external_bill_of_lading_list_view">
			<field name="name">external_bill.of.lading</field>
			<field name="model">external.bill.of.lading</field>
			<field name="arch" type="xml">
				<tree>
					<field name="shipping_line" />
					<field name="bill_lading_no" />
					<field name="shipper" />
					<field name="consignee" />
					<field name="first_notify" />
					<field name="add_notify" />
					<field name="booking_no" />
					<field name="contract_no" />
					<field name="port_loading" />
					<field name="port_dest" />
					<field name="vessel" />
					<field name="voyage" />
					<field name="contract_no" />
					<field name="place_of_loading" />
					<field name="place_of_receipt" />
				</tree>
			</field>
		</record>


		<record model="ir.ui.view"
			id="external_bill_of_lading_form_view">
			<field name="name">external.bill.of.lading</field>
			<field name="model">external.bill.of.lading</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<group>
							<field name="show_get" invisible="1"/>
								<label for="shipping_line" />
								<div class="o_row">
									<field name="shipping_line" />
									<button name="get_" string="get" class="oe_link" />
								</div>
								<label for="bill_lading_no" />
								<div class="o_row">
									<field name="bill_lading_no" />
									<button name="get_bill_lading_no" string="get" class="oe_link" />
								</div>
								<label for="shipper" />
								<div class="o_row">
									<field name="shipper" />
									<button name="get_shipper" string="get" class="oe_link" />
								</div>
								<label for="consignee" />
								<div class="o_row">
									<field name="consignee" />
									<button name="get_consignee" string="get" class="oe_link" />
								</div>
								<label for="first_notify" />
								<div class="o_row">
									<field name="first_notify" />
									<button name="get_first_notify" string="get" class="oe_link" />
								</div>
								<label for="add_notify" />
								<div class="o_row">
									<field name="add_notify" />
									<button name="get_add_notify" string="get" class="oe_link" />
								</div>
								<label for="place_of_loading" />
								<div class="o_row">
									<field name="place_of_loading" />
									<button name="get_place_of_loading" string="get" class="oe_link" />
								</div>
								<label for="place_of_receipt" />
								<div class="o_row">
									<field name="place_of_receipt" />
									<button name="get_place_of_receipt" string="get" class="oe_link" />
								</div>
							</group>
							<group>
								<label for="booking_no" />
								<div class="o_row">
									<field name="booking_no" />
									<button name="get_booking_no" string="get" class="oe_link" />
								</div>
								<label for="contract_no" />
								<div class="o_row">
									<field name="contract_no" />
									<button name="get_contract_no" string="get" class="oe_link" />
								</div>
								<label for="port_loading" />
								<div class="o_row">
									<field name="port_loading" />
									<button name="get_port_loading" string="get" class="oe_link" />
								</div>
								<label for="port_dest" />
								<div class="o_row">
									<field name="port_dest" />
									<button name="get_port_dest" string="get" class="oe_link" />
								</div>
								<label for="vessel" />
								<div class="o_row">
									<field name="vessel" />
									<button name="get_vessel" string="get" class="oe_link" />
								</div>
								<label for="voyage" />
								<div class="o_row">
									<field name="voyage" />
									<button name="get_voyage" string="get" class="oe_link" />
								</div>
								<label for="contract_no" />
								<div class="o_row">
									<field name="contract_no" />
									<button name="get_contract_no" string="get" class="oe_link" />
								</div>
							</group>

							<label for="commodity_ids" style="font-weight: bold" />
							<field name="commodity_ids">
								<tree create="false" delete="false" edit="false"
									editable="false">
									<field name="name" />
								</tree>
							</field>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window"
			id="external_bill_of_lading_action">
			<field name="name">External Bill of Lading</field>
			<field name="res_model">external.bill.of.lading</field>
			<field name="view_mode">tree,form</field>
		</record>




	</data>
</odoo>