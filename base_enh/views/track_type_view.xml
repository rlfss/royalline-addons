<odoo>
	<data>

		<record model="ir.ui.view" id="track_type_list_view">
			<field name="name">track_type</field>
			<field name="model">track.type</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name" />
					<field name="note" />
				</tree>
			</field>
		</record>


		<record model="ir.ui.view" id="track_type_form_view">
			<field name="name">track_type</field>
			<field name="model">track.type</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<group>
								<field name="name" />
							</group>
							<group>
								<field name="note" />
							</group>
							
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="track_type_action">
			<field name="name">Track Type</field>
			<field name="res_model">track.type</field>
			<field name="view_mode">tree,form</field>
		</record>


		<menuitem  id="track_type_menu"
			parent="location_menu" action="track_type_action" />

	</data>
</odoo>